<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            android:layout_margin="8dp"
            card_view:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Enter mobile no to pay" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/layout_design"
                    android:hint="Enter mobile No"
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
                    android:maxLength="10"
                    android:drawablePadding="10dp"
                    android:textSize="15sp" />

            </LinearLayout>
            </android.support.v7.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/layout_box_new"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/text_white" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="QR Code Scan for pay"
            android:textColor="@color/text_black" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/frame"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_qr_code" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_proceed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_design">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alise_blue"
            android:gravity="center"
            android:text="Proceed"
            android:textColor="@color/text_white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>